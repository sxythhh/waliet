{
  "name": "virality",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter=@virality/web",
    "dev:mobile": "turbo run dev --filter=@virality/mobile",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@virality/web",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.3.3"
  },
  "packageManager": "npm@11.6.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
