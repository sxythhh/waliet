{
  "name": "virality",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@virality/web",
    "dev:web": "turbo run dev --filter=@virality/web",
    "dev:web:only": "npm run dev --workspace=@virality/web",
    "dev:mobile": "turbo run dev --filter=@virality/mobile",
    "dev:mobile:only": "npm run dev --workspace=@virality/mobile",
    "dev:all": "turbo run dev",
    "dev:root": "next dev",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@virality/web",
    "build:root": "next build",
    "build:packages": "turbo run build --filter=@virality/shared-types --filter=@virality/api-client",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:dist": "rm -rf packages/*/dist apps/*/dist",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "next": "^14.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.49",
    "prettier": "^3.3.3",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "npm@11.6.1",
  "engines": {
    "node": ">=20.0.0"
  }
}
